<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="dropdown col-8">
      <form action="/sort" method="GET" class="row">
        <div class="date-select mr-3">
          <select class="form-control" style="cursor: pointer" name="month" onchange="this.form.submit()">
            <option value="" selected>All Month</option>
            {{#each availableMonth}}
            <option value="{{this.month}}" {{#if this.isSelected}} selected{{/if}}>
              {{this.month}}</option>
            {{/each}}
          </select>
        </div>
        <div class="category-select">
          <select class="form-control" style="cursor: pointer" name="category" onchange="this.form.submit()">
            <option value="" selected>All</option>
            {{#each categories}}
            <option value="{{this._id}}" {{#if this.isSelected}} selected{{/if}}>
              {{this.categoryName}}</option>
            {{/each}}
          </select>
        </div>
      </form>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <p class="col-8" style="font-size: 20px;">總金額：</p>
  </div>

  <div class="row justify-content-center">
    <p class="col-8" style="font-size: 70px; text-align:right;vertical-align:text-top">{{totalAmount}}</p>
  </div>

  <div class="row justify-content-end">
    <ul class="list-group col-10">
      {{#each records}}

      <div class="row  align-items-center">
        <li class="list-group-item col-10 {{#if_even @index}}bg-light{{/if_even}}">
          <div class="row  align-items-center">
            <i class="{{this.category.icon}} col-2"></i>
            <div class="col-8">
              <p>{{this.name}}</p>
              <p>{{this.date}} {{#if this.merchant}}@{{this.merchant}}{{/if}}</p>
            </div>
            <p class="col-2">{{this.amount}}</p>
          </div>
        </li>
        <div class="col-2">
          <a href="/records/{{this._id}}/edit">修改</a>
          <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
            <button class="inlineBtn" type="submit">刪除</button>
          </form>
        </div>
      </div>
      {{/each}}
    </ul>
  </div>
  <div style="text-align: center;">
    <a class="btn btn-primary my-5" href="/records/new" style="width: 20%;">新增支出</a>
  </div>
</div>